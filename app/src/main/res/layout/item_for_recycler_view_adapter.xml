<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="HardcodedText">
    <!-- NOTE that is my name just made to simulate different names and
     see how the appCompatTextView will resize them-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_margin="8dp"

        android:background="@drawable/blue_gradient_round_rect"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/guide_line_67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.67"/>

        <android.support.constraint.Guideline
            android:id="@+id/guide_line_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>

        <android.support.constraint.Guideline
            android:id="@+id/guide_line_75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dateAppCompatTextView"
            android:layout_width="0dp"
            android:layout_height="30dp"

            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"

            style="@style/one_line_for_app_compat"

            android:text="Mar 22, 2018"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerName1"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"

            style="@style/one_line_for_app_compat"
            android:text="Mohamed Alaa Eldin Elsayed Ahmed"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/dateAppCompatTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guide_line_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerName2"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"

            style="@style/one_line_for_app_compat"
            android:text="Mohamed Alaa Eldin Elsayed Ahmed"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/playerName1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guide_line_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerName3"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"

            style="@style/one_line_for_app_compat"
            android:text="Mohamed Alaa Eldin"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/playerName2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guide_line_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerName4"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center_vertical"

            style="@style/one_line_for_app_compat"
            android:text="Mohamed Alaa Eldin Elsayed"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/playerName3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guide_line_75"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerScore1"
            android:layout_width="0dp"
            android:layout_height="40dp"

            style="@style/one_line_for_app_compat"
            android:text="-99999"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/dateAppCompatTextView"
            app:layout_constraintLeft_toLeftOf="@id/guide_line_75"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerScore2"
            android:layout_width="0dp"
            android:layout_height="40dp"

            style="@style/one_line_for_app_compat"
            android:text="8642"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/playerScore1"
            app:layout_constraintLeft_toLeftOf="@id/guide_line_75"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerScore3"
            android:layout_width="0dp"
            android:layout_height="40dp"

            style="@style/one_line_for_app_compat"
            android:text="-59"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/playerScore2"
            app:layout_constraintLeft_toLeftOf="@id/guide_line_75"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/playerScore4"
            android:layout_width="0dp"
            android:layout_height="40dp"

            style="@style/one_line_for_app_compat"
            android:text="9"
            app:fontFamily="sans-serif-condensed"

            app:layout_constraintTop_toBottomOf="@id/playerScore3"
            app:layout_constraintLeft_toLeftOf="@id/guide_line_75"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"

            android:src="@drawable/ic_delete_black_24dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guide_line_33"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="30dp"

            style="@style/one_line_for_app_compat"

            android:text="Micro"
            app:fontFamily="monospace"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guide_line_33"
            app:layout_constraintRight_toRightOf="@id/guide_line_67"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"

            android:src="@drawable/ic_edit_black_24dp"

            app:layout_constraintLeft_toLeftOf="@id/guide_line_67"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/roundsLeftAppCompatTextView"
        android:layout_width="40dp"
        android:layout_height="40dp"

        style="@style/one_line_for_app_compat"
        android:text="16"

        android:background="@drawable/blue_gradient_circle"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:padding="8dp"

        android:src="@drawable/ic_two_persons"
        android:background="@drawable/blue_gradient_circle"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>