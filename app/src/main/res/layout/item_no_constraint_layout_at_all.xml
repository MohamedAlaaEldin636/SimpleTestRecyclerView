<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="HardcodedText">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"

        android:background="@drawable/blue_gradient_round_rect"/>

    <!-- Rounds Left -->
    <TextView
        android:id="@+id/roundsLeftTextView"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:text="16"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:background="@drawable/blue_gradient_circle"/>

    <!-- Game Team -->
    <ImageView
        android:id="@+id/gameTeamImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:padding="8dp"
        android:src="@drawable/ic_two_persons"

        android:background="@drawable/blue_gradient_circle"

        android:contentDescription="Game Team"/>

    <!-- Date ==> ex. Mar 22, 2018 -->
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:text="Mar 22, 2018"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginTop="8dp"

        android:layout_toRightOf="@id/roundsLeftTextView"
        android:layout_toLeftOf="@id/gameTeamImageView"
        android:layout_toEndOf="@id/roundsLeftTextView"
        android:layout_toStartOf="@id/gameTeamImageView"/>

    <!-- Scores -->
    <TextView
        android:id="@+id/playerScore1"
        android:layout_width="80dp"
        android:layout_height="40dp"

        android:text="32218"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:layout_below="@id/date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/playerScore2"
        android:layout_width="80dp"
        android:layout_height="40dp"

        android:text="-218"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:layout_below="@id/playerScore1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/playerScore3"
        android:layout_width="80dp"
        android:layout_height="40dp"

        android:text="0"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:layout_below="@id/playerScore2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/playerScore4"
        android:layout_width="80dp"
        android:layout_height="40dp"

        android:text="95"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:layout_below="@id/playerScore3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <!-- Names -->
    <TextView
        android:id="@+id/playerName1"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:text="Mohamed Alaa Eldin"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:layout_below="@id/date"
        android:layout_toLeftOf="@id/playerScore1"
        android:layout_toStartOf="@id/playerScore1"/>

    <TextView
        android:id="@+id/playerName2"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:text="Mohamed Alaa"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:layout_below="@id/playerName1"
        android:layout_toLeftOf="@id/playerScore1"
        android:layout_toStartOf="@id/playerScore1"/>

    <TextView
        android:id="@+id/playerName3"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:text="Mohamed"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:layout_below="@id/playerName2"
        android:layout_toLeftOf="@id/playerScore1"
        android:layout_toStartOf="@id/playerScore1"/>

    <TextView
        android:id="@+id/playerName4"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:text="Mohamed Alaa Eldin Elsayed"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:maxLines="1"
        android:ellipsize="end"

        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:layout_below="@id/playerName3"
        android:layout_toLeftOf="@id/playerScore1"
        android:layout_toStartOf="@id/playerScore1"/>

    <!-- Must be linear layout for weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_delete_black_24dp"

            android:contentDescription="Delete"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="Full"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_edit_black_24dp"

            android:contentDescription="Edit"/>

    </LinearLayout>

</RelativeLayout>